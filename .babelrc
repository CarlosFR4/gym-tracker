{
  "presets": ["babel-preset-expo"],
  "plugins": [
    ["module-resolver", {
      "root": ["./"],
      "alias": {
        "@components": "./src/components",
        "@di": "./src/di",
        "@drizzle": "./drizzle",
        "@locales": "./locales",
        "@assets": "./assets",
        "@usecases": "./src/usecases",
        "@hooks": "./src/hooks",
        "@entities": "./src/entities",
        "@database": "./src/database",
        "@theme": "./src/theme",
        "@contexts": "./src/contexts",
        "@util": "./src/util",
        "@mappers": "./src/mappers",
        "@defaults": "./defaults"
      },
      "extensions": [".js", ".jsx", ".tsx", ".ios.js", ".android.js"]
    }],
    ["inline-import", {
      "extensions": [".sql"]
    }]
  ]
}